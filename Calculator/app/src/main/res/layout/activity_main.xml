<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="25dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:text="CALCULATOR"
        android:textColor="@color/teal_700"
        android:textAlignment="center"
        android:textSize="50sp"
        android:layout_height="80dp">

    </TextView>

    <EditText
        android:id="@+id/screen"
        android:layout_below="@id/title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey"
        android:text=""
        android:textSize="55dp"
        android:textColor="@color/white"
        android:paddingHorizontal="15dp"
        android:paddingVertical="35dp"
        android:layout_above="@+id/numbers"
        android:textStyle="bold"/>
    
    <LinearLayout
        android:id="@+id/numbers"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:layout_height="wrap_content">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/AC"
                android:text="AC"
                style="@style/button1"/>
            <Button
                android:id="@+id/num7"
                android:text="7"
                style="@style/button2"/>
            <Button
                android:id="@+id/num4"
                android:text="4"
                style="@style/button2"/>
            <Button
                android:id="@+id/num1"
                android:text="1"
                style="@style/button2"/>
            <Button
                android:id="@+id/backspace"
                android:background="@drawable/shape1"
                android:drawableStart="@drawable/baseline_backspace_24"
                style="@style/button1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/bracket"
                android:text="()"
                style="@style/button1"/>
            <Button
                android:id="@+id/num8"
                android:text="8"
                style="@style/button2"/>
            <Button
                android:id="@+id/num5"
                android:text="5"
                style="@style/button2"/>
            <Button
                android:id="@+id/num2"
                android:text="2"
                style="@style/button2"/>
            <Button
                android:id="@+id/point"
                android:text="."
                style="@style/button2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/exponential"
                android:text="^"
                style="@style/button1"/>
            <Button
                android:id="@+id/num9"
                android:text="9"
                style="@style/button2"/>
            <Button
                android:id="@+id/num6"
                android:text="6"
                style="@style/button2"/>
            <Button
                android:id="@+id/num3"
                android:text="3"
                style="@style/button2"/>
            <Button
                android:id="@+id/num0"
                android:text="0"
                style="@style/button2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/divide"
                android:text="รท"
                style="@style/button1"/>
            <Button
                android:id="@+id/multiply"
                android:text="ร"
                style="@style/button1"/>
            <Button
                android:id="@+id/subtractin"
                android:text="-"
                style="@style/button1"/>
            <Button
                android:id="@+id/addition"
                android:text="+"
                style="@style/button1"/>
            <Button
                android:id="@+id/equals"
                android:text="="
                style="@style/button1"/>
        </LinearLayout>
        
    </LinearLayout>

</RelativeLayout>